@model IEnumerable<ASPFinal.Models.Account>

@{
	ViewData["Title"] = "Index";
}

<h1>Buisnesses and Professionals</h1>

<p>
	<a asp-action="Create">Create an account</a>
</p>
<table class="table sortable table-borderless">
	<thead>
		<tr class="border-bottom border-info">
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Buisness)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			@if(User.Identity.IsAuthenticated)
			{
				<th></th>
			}
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr class="border-top">
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Buisness)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				@if(User.Identity.IsAuthenticated)
				{
					<td>
						<a asp-action="Edit" asp-route-id="@item.AccountId">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.AccountId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
					</td>
				}
			</tr>
		}
	</tbody>
</table>
