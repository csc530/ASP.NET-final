<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Portals</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/myStyles.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Portals</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div class="d-sm-inline-flex">
						<ul class="navbar-nav flex-shrink-0">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="JobPosts" asp-action="Index">Postings</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Index">Proffesionals</a>
							</li>
							@if(User.IsInRole("Administrator"))
							{
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="JobStatus" asp-action="Index">Job status</a>
								</li>
							}
						</ul>
						<!--Also added styles so it looks like just text until focused
						Figure out action the search bar-->
						<input type="text" placeholder="Search🔍" class="align-content-md-start" />
					</div>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<small>
				&copy; 2021 - Portals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -
				<a href="https://github.com/csc530/ASP.NET-final.git" target="_blank">< Source Code /></a>
				<br />
				Christofer Cousins 1157052 (2021F) COMP-2084G-FDE - Server-Side Scripting ASP.NET
			</small>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<!--Sortable table from https://kryogenix.org/code/browser/sorttable/ -->
	<script src="~/js/sorttable.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
